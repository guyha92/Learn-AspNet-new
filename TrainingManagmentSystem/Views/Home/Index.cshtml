@model TrainingManagmentSystem.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home";
}
<h1 class="text-center">@ViewBag.Message</h1>
<br />
<br />
<h2 class="text-center">
    התראות במערכת
</h2>
<br />

<h3>
    הדרכות שפגו או יפוגו בקרוב
</h3>

<table class="table" style="font-size:13px">

<tr>
    <th>
        <span>סקטור</span>
    </th>
    <th>
        @Html.DisplayNameFor(model => model.TrainingsNearExpiration.First().TrainingSubSectors)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.TrainingsNearExpiration.First().Name)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.TrainingsNearExpiration.First().TrainingDate)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.TrainingsNearExpiration.First().ExpireDate)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.TrainingsNearExpiration.First().TrainingEnd)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.TrainingsNearExpiration.First().ExpirationDate)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.TrainingsNearExpiration.First().NumberOfMeetings)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.TrainingsNearExpiration.First().Duration)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.TrainingsNearExpiration.First().Location)
    </th>
    <th></th>
</tr>
@foreach (var item in Model.TrainingsNearExpiration)
{
    <tr>
        <td>
            @foreach (var i in (item.TrainingSubSectors))
            {
                <div>&nbsp;@Html.DisplayFor(modelItem => i.SubSector.Sector.SectorType)</div>
            }
        </td>

        <td>
            @foreach (var j in (item.TrainingSubSectors))
            {
                <div>&nbsp;@Html.DisplayFor(modelItem => j.SubSector.SubSectortype)</div>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainingDate)
        <td>
            @Html.DisplayFor(modelItem => item.ExpireDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainingEnd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpirationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfMeetings)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td style="width:700px;">
            <div class="btn-group" role="group">                
                <abbr title="פרטים">
                    <a type="button" class="btn btn-success btn-sm" href="@Url.Action("Details","Training",new { id=item.TrainingID },null)">
                        <span class="glyphicon glyphicon-list"></span>
                    </a>
                </abbr>
            </div>
        </td>
    </tr>


}

</table>

<style>

    abbr[title] {
        border-bottom: none !important;
        cursor: inherit !important;
        text-decoration: none !important;
    }

    th {
        text-align: right;
        width: 120px;
    }
</style>