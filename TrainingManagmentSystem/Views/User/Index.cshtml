@model IEnumerable<TrainingManagmentSystem.Models.User>
@{
    ViewBag.Title = "ניהול משתמשים";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var maxLoginAttempts =  int.Parse(System.Configuration.ConfigurationManager.AppSettings["MaxLoginAttempts"]);
}
<h2>ניהול משתמשים</h2>
<p>
    <a type="button" class="btn btn-primary btn-sm" href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>
        <span>צור משתמש</span>
    </a>
</p>
<table class="table" style="font-size:13px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organization)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.LicenseNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Organization)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LicenseNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td style="width:700px;">
            <div class="btn-group" role="group">
                <abbr title="עריכה">
                    <a type="button" class="btn btn-primary btn-sm" href="@Url.Action("Edit",new { id = item.UserId })">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </abbr>
                <abbr title="פרטים">
                    <a type="button" class="btn btn-success btn-sm" href="@Url.Action("Details",new { id = item.UserId })">
                        <span class="glyphicon glyphicon-list"></span>
                    </a>
                </abbr>
                <abbr title="מחיקה">
                    <a type="button" class="btn btn-danger btn-sm" href="@Url.Action("Delete",new { id = item.UserId })">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </abbr>

                @if (item.FailedLoginAttempts == maxLoginAttempts)
                {
                    <abbr title="שחרר משתמש">
                        <a type="button" class="btn btn-primary btn-sm" href="@Url.Action("ReleaseLockedUser",new { id = item.UserId })">
                            שחרר משתמש נעול
                        </a>
                    </abbr>
                }              
            </div>
        </td>
    </tr>
    }
</table>
<br />

<style>

    abbr[title] {
        border-bottom: none !important;
        cursor: inherit !important;
        text-decoration: none !important;
    }

    th {
        text-align: right;
        width: 120px;
    }
</style>

