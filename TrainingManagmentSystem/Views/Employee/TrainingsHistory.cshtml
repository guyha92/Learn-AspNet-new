@model IEnumerable<TrainingManagmentSystem.Models.Training>

@{
    ViewBag.Title = "TrainingsHistory";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <h2>היסטוריית הדרכות</h2>


    <table class="table style=" font-size:12px"">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sector.SectorType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TrainingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sector.SectorType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TrainingDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TrainingEnd)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
            </tr>


        }

    </table>

    <a href="javascript:void(0);" onclick="history.go(-1);">חזור</a>

</body>
</html>
