@model TrainingManagmentSystem.ViewModels.EmployeeTrainingsVM

@{
    ViewBag.Title = "Employee Trainings";
}

<h2> הדרכות לעובד @Model.EmployeeName</h2>
<br />
<br />
<h4>הדרכות פנימיות</h4>
<table class="table" style="font-size:13px">
    <tr>
        <th>
            <span>סקטור</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalTrainings.First().Training.TrainingSubSectors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalTrainings.First().Training.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalTrainings.First().Training.TrainingDate)
        </th>            
        <th>
            @Html.DisplayNameFor(model => model.InternalTrainings.First().Training.TrainingEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalTrainings.First().Training.ExpirationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalTrainings.First().Training.NumberOfMeetings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalTrainings.First().Training.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalTrainings.First().Training.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalTrainings.First().IfPass)
        </th>
    </tr>
    @foreach (var item in Model.InternalTrainings)
    {
        <tr>
            <td>
                @foreach (var i in (item.Training.TrainingSubSectors))
                {
                    <div>&nbsp;@Html.DisplayFor(modelItem => i.SubSector.Sector.SectorType)</div>
                }
            </td>

            <td>
                @foreach (var j in (item.Training.TrainingSubSectors))
                {
                    <div>&nbsp;@Html.DisplayFor(modelItem => j.SubSector.SubSectortype)</div>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.TrainingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.TrainingEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.NumberOfMeetings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Location)
            </td>      
            <td>
                @Html.DisplayFor(modelItem => item.IfPass, new { @disabled = "disabled" })
            </td>      
        </tr>
    }

</table>

<br />
<br />
<h4>הדרכות חיצוניות</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExternalTrainings.First().Training.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalTrainings.First().Training.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalTrainings.First().Training.TrainingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalTrainings.First().Training.NumberOfMeetings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalTrainings.First().Training.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalTrainings.First().Training.TrainingEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalTrainings.First().Training.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalTrainings.First().Training.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExternalTrainings.First().TrainingStatus)
        </th>
    </tr>
    @foreach (var item in Model.ExternalTrainings)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.TrainingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.NumberOfMeetings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.TrainingEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingStatus)
            </td>            
        </tr>
    }
</table>
<a href="javascript:void(0);" onclick="history.go(-1);">חזור</a>

<style>
    abbr[title] {
        border-bottom: none !important;
        cursor: inherit !important;
        text-decoration: none !important;
    }

    th {
        text-align: right;
        width: 120px;
    }
</style>
